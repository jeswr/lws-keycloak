# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=lws
KEYCLOAK_CLIENT_ID=lws-storage
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# Authorization Server
AS_ISSUER=http://localhost:8080/realms/lws
AS_TOKEN_ENDPOINT=http://localhost:8080/realms/lws/protocol/openid-connect/token
AS_JWKS_URI=http://localhost:8080/realms/lws/protocol/openid-connect/certs

# Storage Server
STORAGE_PORT=3001
STORAGE_HOST=localhost
STORAGE_REALM=http://localhost:3001/storage
STORAGE_BACKEND=filesystem
STORAGE_PATH=./data/storage
STORAGE_AS_URI=http://localhost:8080/realms/lws

# CID Resolver Service
CID_RESOLVER_PORT=3000
CID_RESOLVER_HOST=localhost
CID_CACHE_TTL=3600
CID_HTTPS_ONLY=false
CID_MAX_SIZE=10240
CID_RATE_LIMIT=10

# Redis (for distributed caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Token Configuration
TOKEN_LIFETIME=300
CLOCK_SKEW_TOLERANCE=60

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Trusted Storages (comma-separated)
TRUSTED_STORAGES=http://localhost:3001

# TLS (for production)
TLS_ENABLED=false
TLS_CERT_PATH=
TLS_KEY_PATH=
