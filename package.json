{
  "name": "lws-keycloak",
  "version": "1.0.0",
  "description": "Linked Web Storage reference implementation using Keycloak",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts storage-server",
    "dev:all": "tsx src/index.ts all",
    "dev:all:parallel": "./scripts/dev-all.sh",
    "dev:storage": "cd services/storage-server && npm run dev",
    "dev:cid": "cd services/cid-resolver && npm run dev",
    "dev:demo": "cd demo-app && npm run dev",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:keycloak": "docker-compose up -d postgres redis keycloak",
    "docker:services": "docker-compose up -d cid-resolver storage-server",
    "docker:logs": "docker-compose logs -f",
    "keycloak:setup": "tsx scripts/setup-keycloak.ts",
    "demo:install": "cd demo-app && npm install",
    "demo:setup": "./scripts/setup-demo.sh",
    "demo:start": "./scripts/start-demo.sh",
    "demo:test": "cd demo-app && npm test",
    "demo:test:ui": "cd demo-app && npm run test:ui"
  },
  "keywords": [
    "linked-web-storage",
    "keycloak",
    "oauth2",
    "oidc",
    "solid",
    "decentralized",
    "authentication",
    "authorization"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "node-fetch": "^3.3.2",
    "redis": "^4.6.11",
    "ajv": "^8.12.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "jose": "^5.1.3",
    "xmldom": "^0.6.0",
    "xpath": "^0.0.33",
    "@xmldom/xmldom": "^0.8.10"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
